#!/usr/bin/python3
# Website Existence Checker in Python
# Usage: python3 script9.1.py

import requests

# Test with a URL (you can use a non-existent one)
site = requests.get("http://example.com")
status = site.status_code

if status == 200:
    print("Page exists")
else:
    print("Page does not exist")


